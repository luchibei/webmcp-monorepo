{
  "name": "@luchibei/demo-shop",
  "version": "0.1.1",
  "private": true,
  "description": "Demo shopping site for WebMCP integration",
  "type": "module",
  "scripts": {
    "build:sw": "tsup --config tsup.sw.config.ts",
    "build": "pnpm run build:sw && next build",
    "dev": "pnpm run build:sw && next dev",
    "dev:playwright": "pnpm run build:sw && next dev --port 3100 --hostname 127.0.0.1",
    "start": "next start",
    "test": "vitest run --config ../../vitest.config.ts",
    "test:e2e": "playwright test",
    "lint": "eslint \"app/**/*.{ts,tsx}\" \"components/**/*.{ts,tsx}\" \"lib/**/*.ts\" \"sw/**/*.ts\" \"test/**/*.ts\" \"e2e/**/*.ts\""
  },
  "dependencies": {
    "next": "^15.0.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.23.8",
    "@luchibei/webmcp-react": "workspace:*",
    "@luchibei/webmcp-sdk": "workspace:*",
    "@luchibei/webmcp-sw-runtime": "workspace:*"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
