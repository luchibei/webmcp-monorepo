{
  "name": "@luchibei/registry",
  "version": "0.1.0",
  "private": true,
  "description": "Registry and verification app scaffold for WebMCP sites",
  "type": "module",
  "bin": {
    "webmcp-verify": "./bin/webmcp-verify.js"
  },
  "scripts": {
    "build:cli": "tsup --config tsup.cli.config.ts",
